<Window x:Class="UsersAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
		<Button Content="Load Users" Margin="10" Click="Button_Click" />
		<ListBox Margin="10" Height="300" Name="UsersListBox">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<Image Width="50" Height="50" Source="{Binding Image}" Margin="10" />
						<StackPanel Orientation="Vertical" Margin="10">
							<TextBlock Text="{Binding FirstName}" FontWeight="Bold" />
							<TextBlock Text="{Binding LastName}"/>
							<TextBlock Text="{Binding Email}" FontStyle="Italic"/>
						</StackPanel>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</StackPanel>
</Window>
